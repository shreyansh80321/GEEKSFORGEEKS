// User function Template for C++
class Solution {
  public:
    pair<int, int> getMinMax(vector<int> arr) {
        // code here
        pair<int,int> p;
        if(arr.size()==1)
        {
            p.first=arr[0];
            p.second=arr[0];
            return p;
        }
        sort(arr.begin(),arr.end());
        p.first=arr[0];
        p.second=arr[arr.size()-1];
        return p;
    }
};
